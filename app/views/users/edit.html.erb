<main class = "container">

  <%= render :partial => 'middle_navbar' %>


  <section id="about-edit">
    <header>
      <div class="row">
        <div class="col-xs-12">
          <h2>Edit Profile</h2>
        </div>
      </div>
    </header>

    <%= form_for current_user do |f| %>

      <%= f.fields_for :profiles do |ff| %>

      <div class="row about-info">
        <div class="col-sm-4 col-sm-offset-1">
          <h3>Basic Information</h3>

          <div class="row">
            <div class = "col-xs-4">
              <b>Birthday:</b>
            </div>
            <div class = "col-xs-8">
              <%= ff.date_select(:birthdate, :start_year => (Date.current.year - 13), :end_year => 1900, order: [:month, :day, :year],  :prompt => true)%>
            </div>
          </div>

          <div class="row">
            <div class = "col-xs-4">
              <b>College:</b>
            </div>
            <div class = "col-xs-8">
              <%= ff.text_field :college, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class = "col-xs-4">
              <b>Hometown:</b>
            </div>
            <div class = "col-xs-8">
              <%= ff.text_field :hometown, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class = "col-xs-4">
              <b>Currently Lives:</b>
            </div>
            <div class = "col-xs-8">
              <%= ff.text_field :location, class: "form-control" %>
            </div>
          </div>


          <h3>Contact Information</h3>

          <div class="row">
            <div class = "col-xs-4">
              <b>Email:</b>
            </div>
            <div class = "col-xs-8">
              <%= f.object.email %>
            </div>
          </div>

          <div class="row">
            <div class = "col-xs-4">
              <b>Telephone:</b>
            </div>
            <div class = "col-xs-8">
              <%= ff.telephone_field :phone, class: "form-control" %>
            </div>
          </div>

        </div>

        <div class="col-sm-5 col-sm-offset-1" >

          <h3>Words to live by</h3>
          <%= ff.text_area :motto, class: "form-control" %>

          <h3>About me</h3>
          <%= ff.text_area :about, class: "form-control" %>
        </div>
      </div>

      <% end %>

      <div class = "row" id = "save-changes">
        <div class = "col-sm-6 col-sm-offset-3">
          <%= f.submit "Save Changes", class: "btn btn-success" %>

        </div>
      </div>

    <% end %>
  </section>
</main>

<br>