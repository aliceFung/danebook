<% if post.persisted? %>


<article class = "feed-posts" data-id=<%="Post-" + post.id.to_s%> >
  <div class="row">

    <div class="col-xs-2">
      <%=image_tag "user_silhouette_generic.gif", width: "50px", height: "50px" %>
    </div>

    <div class="col-xs-10">
      <p><%= link_to post.user.full_name, user_posts_path(post.user) %></p>
      <p class="date-posted">Posted on <%= post.created_at %></p>
    </div>

  </div>

  <div class = "row">
    <div class="col-md-12 post-body">
      <p><%= post.body %></p>
    </div>
  </div>

  <div class = "row">

    <footer class="col-md-12 like-section">
      <span data-id=<%="Like-Post-"+ post.id.to_s + "-text"%> >
        <%= like_display(post).html_safe %>
      </span>

      <div class = "row">
        <span data-id=<%="Like-Post-"+ post.id.to_s + "-link"%> >
          <%= like_or_unlike_link(post) %>
        </span>

        <%= post_owner_link_option(post) %>

      </div>
      <!-- <a class="col-xs-2" href="#">Comment</a> -->
      <div data-type=<%="comments-Post-"+post.id.to_s%>>
        <%= render @comments= post.comments  %>

      </div>
        <%= render partial: "shared/comment_form", locals: {parent: post} %>
    </footer>

  </div>
</article>
<% end %>
