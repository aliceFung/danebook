<% if post.persisted? %>
<article class = "feed-posts">
  <div class="row">
    <div class="col-xs-2">
      <%=image_tag "user_silhouette_generic.gif", width: "50px", height: "50px" %>
    </div>
    <div class="col-xs-10">
      <p><%= link_to post.user.full_name, user_posts_path(post.user) %></p>
      <p class="date-posted">Posted on <%= post.created_at %></p>
    </div>
  </div>

  <div class = "row">
    <div class="col-md-12 post-body">
      <p><%= post.body %></p>
    </div>
  </div>

  <div class = "row">
    <footer class="col-md-12 like-section">
      <div class = "row">
        <a class="col-xs-2" href="#">Like</a>
        <a class="col-xs-2" href="#">Comment</a>
        <% if current_user.id == post.user_id %>
          <%= link_to "delete", user_post_path(current_user, post), method: :delete, class: "col-xs-1 col-xs-offset-6", data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </footer>
  </div>
</article>
<% end %>
